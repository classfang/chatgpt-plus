{
  "name": "chatgpt-plus",
  "version": "1.4.0",
  "description": "ChatGPT client(linux, mac, win)",
  "main": "./out/main/index.mjs",
  "author": "junki.cn",
  "homepage": "https://junki.cn",
  "repository": {
    "type": "git",
    "url": "https://github.com/classfang/chatgpt-plus.git"
  },
  "engines": {
    "node": ">=21.1.0"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "npm run prebuild && electron-vite dev",
    "prebuild": "node scripts/generate-build-info.js",
    "build": "npm run prebuild && npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@langchain/community": "^0.2.13",
    "electron-store": "^10.0.0",
    "langchain": "^0.2.6",
    "mammoth": "^1.8.0",
    "officeparser": "^4.1.1",
    "pdf-parse": "^1.1.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@element-plus/icons-vue": "^2.3.1",
    "@rushstack/eslint-patch": "^1.7.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.14.8",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vueuse/core": "^10.11.0",
    "axios": "^1.7.2",
    "clipboard": "^2.0.11",
    "dayjs": "^1.11.11",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "element-plus": "^2.7.6",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.1",
    "highlight.js": "^11.9.0",
    "html2canvas": "^1.4.1",
    "markdown-it": "^14.1.0",
    "markdown-it-mathjax3": "^4.3.2",
    "openai": "^4.52.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "prettier": "^3.3.2",
    "sass": "^1.77.6",
    "typescript": "^5.5.2",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-vue-components": "^0.27.0",
    "vite": "^5.3.1",
    "vue": "^3.4.30",
    "vue-i18n": "^9.13.1",
    "vue-tsc": "^2.0.22"
  }
}
